<!--忘记密码-->
<view class="cantainer">
  <view id="title">
    <view>OUTBREAK</view>
    <view>多客户端云会议管理系统</view>
  </view>
  <form bindsubmit="formSubmit">
    <view class="section">
      <text>邮箱：</text>
      <input id="email_input" type="email" bindinput="inputEmail" placeholder="请输入邮箱"></input>
    </view>
    <view class="section">
      <text>新密码：</text>
      <input id="npw" type="text" bindinput="inputnpw" placeholder="请输入新密码"></input>
    </view>
    <view class="section">
      <text>新密码：</text>
      <input id="repw" type="text" bindinput="inputrpw" placeholder="再次输入密码"></input>
    </view>
    <view class="section">
      <text>验证码：</text>
      <input id="check_input" type="number" bindinput="inputCheck" placeholder="请输入验证码"></input>
    </view>
    <view>
      <button size='mini' class="button" bindtap="getCheck">获取验证码</button>
      <button size='mini' class="button" bindtap="resetpw">重置密码</button>
    </view>
  </form>
</view>