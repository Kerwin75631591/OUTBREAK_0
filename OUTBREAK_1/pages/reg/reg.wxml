<!--pages/reg/reg.wxml  注册页-->
<view class="cantainer">
  <view class="title">
    <text>OUTBREAK</text>
    <text>多客户端云会议管理系统</text>
  </view>
  <form bindsubmit="formSubmit">
    <view class="section">
      <text>邮箱：</text>
      <input type="text" placeholder="请输入邮箱" class="RegisterEmail" bindinput="RegisterEmail"></input>
    </view>
    <view class="section">
      <text>名称：</text>
      <input type="text" placeholder="请输入名称" class="RegisterName" bindinput="RegisterName"></input>
    </view>
    <view class="section">
      <text>密码：</text>
      <input password="true" placeholder="请输入密码" class="RegisterPassword" bindinput="RegisterPassword"></input>
    </view>
    <view class="button">
      <button class="button" form-type="submit" hover-class="afterClick" bindtap="RegsterBtn">注册</button>
    </view>
  </form>
</view>