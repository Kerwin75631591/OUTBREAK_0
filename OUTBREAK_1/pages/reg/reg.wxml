<!--pages/reg/reg.wxml  注册页-->
<view class="container">
  <view class="title">
    <text>OUTBREAK</text>
    <text>多客户端云会议管理系统</text>
  </view>
  <form bindsubmit="formSubmit">
    <view class="section"> 
      <input type="text" style="font-size:40rpx; border-bottom-left-radius: 10px;border-top-left-radius: 10px; border-bottom-right-radius: 10px;border-top-right-radius: 10px;background-color: gainsboro;text-align:center" placeholder="请输入邮箱" class="RegisterEmail" bindinput="RegisterEmail"></input>
    </view>
    <view class="section">
      <input type="text" style="font-size:40rpx; border-bottom-left-radius: 10px;border-top-left-radius: 10px; border-bottom-right-radius: 10px;border-top-right-radius: 10px;background-color: gainsboro;text-align:center" placeholder="请输入姓名" class="RegisterName" bindinput="RegisterName"></input>
    </view>
    <view class="section">
      <input password="true" style="font-size:40rpx; border-bottom-left-radius: 10px;border-top-left-radius: 10px; border-bottom-right-radius: 10px;border-top-right-radius: 10px;background-color: gainsboro;text-align:center" placeholder="请输入密码" class="RegisterPassword" bindinput="RegisterPassword"></input>
    </view>
    <view class="section">
      <input password="true" style="font-size:40rpx; border-bottom-left-radius: 10px;border-top-left-radius: 10px; border-bottom-right-radius: 10px;border-top-right-radius: 10px;background-color: gainsboro;text-align:center" placeholder="再次输入密码" class="RegisterAgaPassword" bindinput="RegisterAgaPassword"></input>
    </view>
    <view class="button">
      <button class="button" form-type="submit" hover-class="afterClick" bindtap="RegsterBtn">注册</button>
    </view>
  </form>
</view>